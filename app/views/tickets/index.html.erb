<!-- index.html.erb -->

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Ticket ID</th>
      <th>Request Number</th>
      <th>Request Type</th>
      <th>Company Name</th>
      <th>Crew On Site</th>
    </tr>
  </thead>
  <tbody>
    <% @result.each do |row| %>
      <a href="/tickets/<%= row['ticket_id'] %>">
        <tr>
          <td><%= row['ticket_id'] %></td>
          <td><%= row['request_number'] %></td>
          <td><%= row['request_type'] %></td>
          <td><%= row['company_name'] %></td>
          <td><%= row['crew_on_site'] == 't' ? 'Yes' : 'No' %></td>
        </tr>
      </a>
    <% end %>
  </tbody>
</table>

<div class="tickets--table">
  <div class="table__header__container">
    <div class="table__header--header">
      Ticket ID
    </div>
    <div class="table__header--header">
      Request Number
    </div>
    <div class="table__header--header">
      Request Type
    </div>
    <div class="table__header--header">
      Company Name
    </div>
    <div class="table__header--header">
      Crew On Site
    </div>
  </div>
    <div class="tickets--table--content">
       <% @result.each do |row| %>
        <a href="/tickets/<%= row['ticket_id'] %>">
          <div class="table--row">
            <div class="table--cell"><%= row['ticket_id'] %></div>
            <div class="table--cell"><%= row['request_number'] %></div>
            <div class="table--cell"><%= row['request_type'] %></div>
            <div class="table--cell"><%= row['company_name'] %></div>
            <div class="table--cell"><%= row['crew_on_site'] == 't' ? 'Yes' : 'No' %></div>
          </div>
        </a>
      <% end %>
    </div>
</div>
